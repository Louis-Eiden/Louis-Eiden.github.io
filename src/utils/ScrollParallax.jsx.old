// Parallax.js

import React, { useEffect, useState } from "react";

const ScrollParallax = ({ children }) => {
  const [scrollPosition, setScrollPosition] = useState(0);

  useEffect(() => {
    const handleScroll = () => {
      setScrollPosition(window.scrollY);
    };

    window.addEventListener("scroll", handleScroll);

    return () => {
      window.removeEventListener("scroll", handleScroll);
    };
  }, []);

  const parallaxStyles = {
    backgroundPositionY: `${scrollPosition * -5}px`, // Adjust the multiplier to control the parallax effect
    minHeight: "100vh", // Ensure that the container takes up at least the full viewport height
  };

  return (
    <div className="parallax-container" style={parallaxStyles}>
      {children}
    </div>
  );
};

export default ScrollParallax;
